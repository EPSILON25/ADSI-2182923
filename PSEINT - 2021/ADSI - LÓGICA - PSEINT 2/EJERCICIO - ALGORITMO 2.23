Proceso EJERCICIO2_23
	//Una tienda ofrece un descuento del 15% sobre el total de la compra y un cliente
	//desea saber cuánto deberá pagar finalmente por su compra. Tener en cuenta
	//que los martes se tiene un 20% de descuento y los viernes se tiene un 50% de
	//descuento si el total de la compra supera los $500.000
	Definir Descuento, Compra, Valor_Final, Martes, Viernes, Ahorro Como Real;
	Definir Dia Como Cadena;
	Martes<-0.2;
	Viernes<-0.5;
	Descuento<-0.15;
	Escribir "Valor de la compra";
	Leer Compra;
	Escribir "Indique el día de la compra";
	Leer Dia;
	Si (Compra>500000) Y (Dia="Martes") Entonces
		Valor_Final<-Compra-(Compra*Martes);
		Ahorro<-Compra*Martes;
	SiNo
		Si (Compra>500000) Y (Dia="Viernes") Entonces
			Valor_Final<-Compra-(Compra*Viernes);
			Ahorro<-Compra*Viernes;
		SiNo
			Valor_Final<-Compra-(Compra*Descuento);
			Ahorro<-Compra*Descuento;
		FinSi
	FinSi
	Escribir "Gracias por su compra, el valor final a pagar es de: $",Valor_Final," y obtuvo un ahorro de: $",Ahorro;
FinProceso
